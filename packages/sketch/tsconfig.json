{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react-native",
    "allowJs": false,
    "strict": true,
    "outDir": "./.ts-compiled",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@elemental-zcash/components": ["../core"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "../components/lib/**/*"
  ]
}
